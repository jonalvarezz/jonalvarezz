/*!
 * Main styles
 *
 */

@import "nib"
@import "normalize"
@import "iconfont"
@import "grid"
@import "utilities"

// Set recomemmended vendor prefixes from caniuse web page.
vendor-prefixes = webkit o ms moz official

/* 
 * ------------------------------
 * General
 * ------------------------------
 */

*,
*:before,
*:after
	box-sizing border-box

html
	font 100%/1.5 "Lato", serif
	font-weight 400
	font-size 110%
	text-rendering optimizeLegibility
	-webkit-font-smoothing antialiased

	@media (min-width: 40em)
		font-size 120%
	@media (min-width: 64em)
		font-size 130%

body
	background-color #fff
	color gray
	margin 0

a
	text-decoration none
	color red
	transition all 200ms
	&:hover
		color dark-red

input
textarea
	width 100%
	height auto
	border 2px solid lighten-gray
	color #898989
	padding-left .8rem
	transition border-color 300ms ease-out
	font-size 0.875rem // 14px
	&:focus
		outline none
		border-color darken(lighten-gray, 20%)

input
	height 45px

textarea
	height 10rem
	padding .8rem
	resize vertical

label
	font-weight bold

img
	max-width 100%
	height auto
	vertical-align middle

table
	width 100%
	tr
		border-bottom 1px solid light-gray
		&:hover
			background-color #f1f1f1

.title
	font-weight 900

// Hero
// ====================================
.hero
	color white
	height 100%
	background-color green
	background url("../../img/bg.jpg") center center no-repeat fixed
	background-size cover
	.title
		margin 0


// #Works
// ====================================

.work-list 
	margin 2rem 0 2.5rem

.work-item
	float left
	width 33.33%
	height 320px
	position relative
	overflow hidden
	
	&.half
		width 50%
		
	@media (max-width: 30em)
		width 50%
		&:last-child
			width 100%
			
	.work-item__img
	.work-item__desc
		absolute left 0 right 0
		top 0
		bottom 0
	
	.work-item__img
		transition all 500ms ease-in
	.work-item__desc
		transition all 270ms ease-in-out
		display table
		// Needed for vertical align
		width 100%
		height 100%
		
	.wrap
		display none
		vertical-align middle
			
	// Make it look clean and magic		
	&:hover
	&:active
		.work-item__img
			transform scale(1.1)
		.work-item__desc
			background-color rgba(dark-gray, 0.85)
		.wrap
			display table-cell
				
// #Contact
// ====================================
.social
	margin-top 1.4rem
	a
		color #fff
		padding .3rem
		&:hover,
		&:focus
			color gray